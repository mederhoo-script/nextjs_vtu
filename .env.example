# VTU.ng API Configuration
# Base URL for VTU.ng API (do not change unless using a different environment)
VTU_BASE_URL=https://vtu.ng/wp-json

# Your VTU.ng account credentials (REQUIRED)
VTU_USERNAME=your_username_here
VTU_PASSWORD=your_password_here

# Your VTU.ng user PIN (used for transaction authorization - OPTIONAL)
VTU_USER_PIN=your_pin_here

# VTU.ng API Key (OPTIONAL - if provided, will be used with Token authentication)
VTU_API_KEY=your_api_key_here

# Request timeout in milliseconds (OPTIONAL - default: 30000)
VTU_TIMEOUT=30000

# Maximum retry attempts for transient errors (OPTIONAL - default: 3)
VTU_MAX_RETRIES=3

# Server API Key for protecting your internal API routes (OPTIONAL but RECOMMENDED)
# Generate a random string: openssl rand -hex 32
VTU_SERVER_API_KEY=your_server_api_key_here
